<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:stretchColumns="0,1,2,3"
    android:shrinkColumns="0,1,2,3"
    android:gravity="center_vertical"
    android:id="@+id/vs_tl_container"
    android:layout_height="?attr/actionBarSize">


    <TableRow >

        <TextView
            android:id="@+id/vs_tv_home"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableTop="@mipmap/drawer_home"
            android:text="主页"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView
            android:id="@+id/vs_tv_net_music"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableTop="@mipmap/drawer_album"
            android:text="排行榜"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <TextView
            android:id="@+id/vs_tv_friends"
            android:textSize="12sp"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:drawableTop="@mipmap/drawer_artist"
            android:text="推荐"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

        <ImageView
            android:padding="5dp"
            android:id="@+id/vs_iv_more"
            android:textSize="12sp"
            android:gravity="center"
            android:src="@drawable/anim_lay"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"

            />


    </TableRow>



</TableLayout>