<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/vim_iv_image"
            android:src="@mipmap/missing_album_artwork_generic_proxy"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height" />


        <TableLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow>

                <TextView
                    android:id="@+id/vim_tv_title"
                    style="@style/AppTheme.MyTextView"
                    android:layout_margin="4dp"
                    android:textSize="20sp"
                    android:textColor="@color/item_tv_black"
                    android:text="Stressed Out"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />

            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/vim_tv_artist"
                    style="@style/AppTheme.MyTextView"
                    android:layout_margin="4dp"
                    android:textColor="@color/item_tv_white"
                    android:text="Twenty One Pilots"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </TableRow>

        </TableLayout>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/vim_iv_more"
            android:src="@mipmap/ic_sysbar_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />



    </LinearLayout>







</LinearLayout>